<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firmannf.moflick">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.firmannf.moflick.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.firmannf.moflick.WRITE_DATABASE"
        android:protectionLevel="normal" />
    <uses-permission android:name="com.firmannf.moflick.READ_DATABASE" />
    <uses-permission android:name="com.firmannf.moflick.WRITE_DATABASE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screen.main.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.detail.MovieDetailActivity" />

        <provider
            android:name=".data.source.local.MovieContentProvider"
            android:authorities="com.firmannf.moflick"
            android:exported="true"
            android:readPermission="com.firmannf.moflick.READ_DATABASE"
            android:writePermission="com.firmannf.moflick.WRITE_DATABASE" />

        <receiver android:name=".widget.favorite.FavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_widget_info" />
        </receiver>
        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>